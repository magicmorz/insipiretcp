{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch",
            "type": "cppdbg",
            "request": "launch",
            //"program": "${fileDirname}/${fileBasenameNoExtension}.exe",
            "program": "${fileDirname}/${fileBasenameNoExtension}",
            "args": [
                "enp0s3",
                "1"
            ],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [
                /*{
                    "name": "LD_PRELOAD",
                    "value": "${workspaceFolder}/so_proxy/clienthack.so"
                }*/
            ],
            "externalConsole": true,
            "MIMode": "gdb",
            "miDebuggerPath": "${workspaceFolder}/gdb_root.sh",
            "preLaunchTask": "Build Sniffer",
            "postDebugTask": "clean"
        },
    ]
}