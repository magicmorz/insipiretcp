{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "(gdb) Launch",
      "type": "cppdbg",
      "request": "launch",
      "program": "${fileDirname}/${fileBasenameNoExtension}",
      "args": [
        "-i",
        "enp0s3",
        "-n",
        "2"
      ],
      "stopAtEntry": false,
      "cwd": "${fileDirname}",
      "environment": [],
      "externalConsole": true,
      "MIMode": "gdb",
      "miDebuggerPath": "${workspaceFolder}/gdb_root.sh",
      "preLaunchTask": "Build Sniffer",
      "postDebugTask": "clean"
    }
  ]
}